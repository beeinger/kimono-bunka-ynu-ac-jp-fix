{
  "manifest_version": 3,
  "name": "Kimono Bunka Yokohama National University Fix",
  "version": "1.0.0",
  "description": "Replace old ASX <embed> players with optimized MP4 <video> with added EN and JP subtitles and download links on kimono-bunka.ynu.ac.jp",
  "content_scripts": [
    {
      "matches": ["https://kimono-bunka.ynu.ac.jp/*"],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["vtt/*", "vtt/en/*", "vtt/jp/*"],
      "matches": ["https://kimono-bunka.ynu.ac.jp/*"]
    }
  ],
  "icons": { "128": "icons/icon128.png" },
  "browser_specific_settings": {
    "gecko": {
      "id": "kimono-bunka-ynu-fix@sulecki.dev",
      "strict_min_version": "109.0"
    }
  }
}
